<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="105dp"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:minHeight="48dp" />
    <CheckBox
        android:checked="false"
        android:id="@+id/checkBarber"
        android:text="Im Barber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkbox_clicked"/>

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect" />
    <Button
        android:visibility="invisible"
        android:id="@+id/btnConnectBarber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Barber" />
    <TextView
        android:textSize="25dp"
        android:layout_marginTop="100dp"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:id="@+id/btnGoToRegisterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User" />

        <Button
            android:layout_marginLeft="5dp"

            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:id="@+id/registerBarber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Barber" />
    </LinearLayout>


</LinearLayout>